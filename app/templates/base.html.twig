<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>{% block title %}KINO EPI{% endblock %}</title>
    {% block stylesheets %}
        <!-- Bootstrap -->
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/main.css') }}" rel="stylesheet">
    {% endblock %}

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->





</head>
<body>
{% include 'default/_flash_messages.html.twig' %}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <!-- Brand -->
    <a class="nav-a navbar-brand mr-auto" href="{{ url('movieList_index') }}">KINO EPI</a>
    <!-- Links -->
    <ul class=" navbar-nav ">
        <li class="nav-item">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="nav-link"  href="{{ url('auth_logout') }}" title="{{ 'auth.logout.label'|trans }}">
                    {{ 'auth.logout.label'|trans }}
                </a>
            {% else %}
                <a class="nav-link"  href="{{ url('auth_login') }}" title="{{ 'auth.login.label'|trans }}">
                    {{ 'auth.login.label'|trans }}
                </a>
                <a class="nav-link"  href="{{ url('user_add') }}" title="{{ 'label.signin'|trans }}">
                    {{ 'label.signin'|trans }}
                </a>
            {% endif %}
        </li>

    </ul>
</nav>

{% include 'default/_flash_messages.html.twig' %}
{% block body %}{% endblock %}

{% block javascripts %}
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/scripts.js') }}"></script>

{% endblock %}



</body>
</html>