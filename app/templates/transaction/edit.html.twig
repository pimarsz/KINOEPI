{% extends 'base.html.twig' %}

{% block title %}{{ 'title.transaction_edit'|trans({'%id%': transaction.transaction_id}) }}{% endblock %}

{% block body %}
    {% form_theme form with ['bootstrap_4_horizontal_layout.html.twig'] %}
    <h1>{{ 'title.transaction_edit'|trans({'%id%': transaction.transaction_id}) }}</h1>
    {{ form_start(form, { method: 'post', action: url('transaction_edit', {'id': transaction.transaction_id}) }) }}
    {{ form_widget(form) }}
    <div class="row">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-success" />
        {{ form_end(form) }}

        <a href="{{ url('transaction_show')}}" title="{{ 'label.back_to_list'|trans }}" class="btn btn-dark">{{ 'label.back_to_list'|trans }}</a>
    </div>
{% endblock %}