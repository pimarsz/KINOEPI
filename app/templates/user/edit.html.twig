{% extends 'base.html.twig' %}

{% block title %}{{ 'title.edit_user'|trans }}{% endblock %}

{% block body %}
    {% form_theme form with ['bootstrap_4_horizontal_layout.html.twig'] %}
    <h1>{{ 'title.edit_user'|trans }}</h1>
    {{ form_start(form, { method: 'post', action: url('user_edit', {'id': user.id}) }) }}
    {{ form_widget(form) }}
    <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-success" />
    {{ form_end(form) }}
    <a href="{{ url('movieList_index')}}" title="{{ 'label.back_to_list'|trans }}">{{ 'label.back_to_list'|trans }}</a>
{% endblock %}