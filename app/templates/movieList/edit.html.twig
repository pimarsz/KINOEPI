{% extends 'base.html.twig' %}

{% block title %}{{ 'title.movie_edit'|trans({'%id%': movie.movie_id}) }}{% endblock %}

{% block body %}
    {% form_theme form with ['bootstrap_4_horizontal_layout.html.twig'] %}

        <h1>{{ 'title.movie_edit'|trans({'%id%': movie.movie_id}) }}</h1>
    {{ form_start(form, { method: 'post', action: url('movieList_edit', {'id': movie.movie_id}) }) }}
    {{ form_widget(form) }}
    <div class="row">
    <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-success" />
    {{ form_end(form) }}

    <a href="{{ url('movieList_index')}}" title="{{ 'label.back_to_list'|trans }}" class="btn btn-dark">{{ 'label.back_to_list'|trans }}</a>
    </div>
{% endblock %}